{
  "name": "book-store",
  "version": "0.0.1",
  "description": "book store app simple nest project.",
  "author": "Indra Muliana",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-esm",
    "entity:create": "cd ./src/core/common/database/typeorm/entities && typeorm entity:create",
    "seed:create": "cd ./database/typeorm/seeders && typeorm migration:create",
    "seed:up": "npm run typeorm migration:run -- -d ./database/typeorm/seeders.config.ts",
    "seed:down": "npm run typeorm migration:revert -- -d ./database/typeorm/seeders.config.ts",
    "seed:show": "npm run typeorm migration:show -- -d ./database/typeorm/seeders.config.ts",
    "migration:create": "cd ./database/typeorm/migrations && typeorm migration:create",
    "migration:up": "npm run typeorm migration:run -- -d ./database/typeorm/migration.config.ts",
    "migration:down": "npm run typeorm migration:revert -- -d ./database/typeorm/migration.config.ts",
    "migration:show": "npm run typeorm migration:show -- -d ./database/typeorm/migration.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^9.3.12",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.12",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^9.3.12",
    "@nestjs/platform-fastify": "^9.3.12",
    "@nestjs/swagger": "^7.1.13",
    "@nestjs/typeorm": "^9.0.1",
    "@types/bcrypt": "^5.0.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "filter-validate-email": "^1.1.3",
    "handlebars": "^4.7.7",
    "joi": "^17.9.1",
    "nanoid": "^3.3.4",
    "nestjs-i18n": "^10.2.6",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "swagger-themes": "^1.2.30",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "prettier": "^2.8.7",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "^4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
